{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": false,
    "noImplicitAny": false,
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "sourceMap": true
  },
  "include": ["src", "types", "**/*.ts"],
  "exclude": ["node_modules"]
}
